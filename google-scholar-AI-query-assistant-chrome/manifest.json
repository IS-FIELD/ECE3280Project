{
  "name": "Scholar AI Query Assistant",
  "version": "0.7",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://localhost/*"],
  "content_scripts": [{
    "matches": ["*://scholar.google.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}